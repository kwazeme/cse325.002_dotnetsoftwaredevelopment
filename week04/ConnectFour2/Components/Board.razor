@using System.Drawing;

@inject GameState State

<HeadContent>
    <style>
        :root {
            --board-bg: @ColorTranslator.ToHtml(BoardColor);
            --player1: @ColorTranslator.ToHtml(Player1Color);
            --player2: @ColorTranslator.ToHtml(Player2Color);
        }
    </style>
</HeadContent>
<nav>
    @for (byte i = 0; i < 7; i++)
    {
        var col = i;
        <span title="Click to play a piece" @onclick="() => PlayPiece(col)">🔽</span>
    }
</nav>

    <article>
        @winnerMessage  <button style="@ResetStyle" @onclick="ResetGame">Reset the game</button>
        <br />
        <span class="alert-danger">@errorMessage</span>
        <span class="alert-info">@CurrentTurn</span>
        <div class="color-settings" style="display: flex; gap: 10px; margin-top: 10px;">
        <label>
            Player 1: 
            <input type="color" @bind-Value="Player1ColorHex"  @bind-Value:event="oninput" />
        </label>
        
        <label>
            Player 2: 
            <input type="color" @bind-Value="Player2ColorHex" @bind-Value:event="oninput" />
        </label>

        <label>
            Board: 
            <input type="color" @bind-Value="BoardColorHex" @bind-Value:event="oninput" />
        </label>
    </div> 

</article>

<div class="game-layout">
    <div class="board-container">
        <div class="board">
            @for (var i = 0; i < 42; i++)
            {
                <span class="container">
                    <span></span>
                </span>
            }
        </div>
            @for (var i = 0; i < 42; i++)
            {
                <span class="@pieces[i]"></span>
            }
    </div>

    <section class="tracking-container">
        <h3>Play Tracker List</h3>
        @if (moveTracking.Count == 0)
        {
            <p>No Play to track yet</p>
        }
        else
        {
            <div class="tracking-list">
                <ol>
                    @foreach (var move in moveTracking)
                    {
                        <li>@move</li>
                    }
                </ol>
            </div>
        }
    </section>
</div>

@code {
    private string[] pieces = new string[42];
    private string winnerMessage = string.Empty;
    private string errorMessage = string.Empty;
     private List<string> moveTracking = new();

    private string CurrentTurn => (winnerMessage == string.Empty) ? $"Player {State.PlayerTurn}'s Turn" : "";
    private string ResetStyle => (winnerMessage == string.Empty) ? "display: none;" : "";
    

    private void PlayPiece(byte col)
    {
        // clear the old error when they try a new move
        errorMessage = string.Empty;

        try
        {
            var player = State.PlayerTurn;
            var turn = State.CurrentTurn;
            var landingRow = State.PlayPiece(col);
            pieces[turn] = $"player{player} col{col} drop{landingRow}";
        
            moveTracking.Add($"Turn {turn + 1}: Player {player} played column {col + 1}");
        }
        catch (ArgumentException ex)
        {
            errorMessage = ex.Message;
        }
        // check for winner
        winnerMessage = State.CheckForWin() switch
        {
            GameState.WinState.Player1_Wins => "Player 1 Wins!",
            GameState.WinState.Player2_Wins => "Player 2 Wins!",
            GameState.WinState.Tie => "It's a tie!",
            _ => ""
        };
    }
     // add functionality Allow the user to select the color of the game pieces.
    // TODO: Implement color selection UI and logic
   
    //define Board and player colors
    [Parameter]
    public Color BoardColor { get; set; } = ColorTranslator.FromHtml("yellow");

    [Parameter]
    public Color Player1Color { get; set; } = ColorTranslator.FromHtml("red");

    [Parameter]
    public Color Player2Color { get; set; } = ColorTranslator.FromHtml("blue");

    
      //hex values for color inputs
    private string Player1ColorHex
    {
        get => ColorTranslator.ToHtml(Player1Color);
        set
        {
            Player1Color = ColorTranslator.FromHtml(value);
        }
    }  

    private string Player2ColorHex
    {
        get => ColorTranslator.ToHtml(Player2Color);
        set
        {
            Player2Color = ColorTranslator.FromHtml(value);
        }
    }
    private string BoardColorHex
    {
        get => ColorTranslator.ToHtml(BoardColor);
        set
        {
            BoardColor = ColorTranslator.FromHtml(value);
        }
    }
   
    protected override void OnInitialized()
    {
        State.ResetBoard();
    }

    void ResetGame()
    {
        State.ResetBoard();
        winnerMessage = string.Empty;
        errorMessage = string.Empty;
        pieces = new string[42];

        moveTracking.Clear();
    }
    
}
